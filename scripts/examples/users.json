  "_field_definitions": {
    "username": "Required. Linux username (a-z, 0-9, _, -, max 32 chars)",
    "comment": "Optional. Full name or description (GECOS field)",
    "groups": "Optional. Array of group names (groups must exist or be created first)",
    "shell": "Optional. Login shell path (default: /bin/bash, nologin: /sbin/nologin)",
    "expire_days": "Optional. Account expires after N days (0 = never)",
    "password_policy": {
      "type": "random = unique random password, default = use config DEFAULT_PASSWORD",
      "expiry_days": "Password must be changed every N days (90 is common, 99999 = never)"
    }
  },
  
  "_examples": {
    "basic_user": {
      "username": "john",
      "comment": "John Doe"
    },
    "developer_with_sudo": {
